@{
    ViewData["Title"] = "Index";
}
<div class="header-index">
</div>
<p class="title">Recomendaciones del día</p>
<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < ViewBag.listaEstablecimientos.Count; i += 3)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="row">
                    @for (int j = 0; j < 3 && (i + j) < ViewBag.listaEstablecimientos.Count; j++)
                    {
                        var item = ViewBag.listaEstablecimientos[i + j];
                            <div class="col-md-4">
                                <div class="card custom-card">
                                    <img src="@item.fotos" class="card-img-top" alt="@item.nombre">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.nombre</h5>
                                        <p class="card-text">@item.direccion</p>
                                        <a href='@Url.Action("VerEstablecimiento", "Home", new { idEstablecimiento = item.id_lugar })' class="btn custom-btn">Ver más</a>
                                    </div>
                                </div>
                            </div>
                    }
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>



