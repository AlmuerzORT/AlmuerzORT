<div id="establecimiento" class="container mt-5">
    <div class="row">
        <!-- Imagen del establecimiento -->
        <div class="col-md-6">
            <img src="@ViewBag.Lugar.fotos" class="img-fluid rounded" alt="@ViewBag.Lugar.nombre">
        </div>

        <!-- Información del establecimiento -->
        <div class="col-md-6">
            <h2>@ViewBag.Lugar.nombre</h2>
            <p><strong>Dirección:</strong> @ViewBag.Lugar.direccion</p>
            <p><strong>Teléfono:</strong> @ViewBag.Lugar.telefono</p>
            <p><strong>Calificación:</strong> @ViewBag.Lugar.calificacion estrellas</p>
            <p><strong>Descripción:</strong> @ViewBag.Lugar.descripcion</p>
        </div>
    </div>

    <!-- Estrellas para la calificación -->
    <div class="text-center mt-3">
        <h5>Califica este establecimiento:</h5>
        <div class="estrellas">
            <img onclick="ActualizarCalificacion(1,1)" src="https://th.bing.com/th/id/R.ce494a4fe33aa36b7b3171c7a8ba7aac?rik=LqEK6sk5c9OzkQ&pid=ImgRaw&r=0" class="img-estrella" />
            <img onclick="ActualizarCalificacion(1,2)" src="https://th.bing.com/th/id/R.ce494a4fe33aa36b7b3171c7a8ba7aac?rik=LqEK6sk5c9OzkQ&pid=ImgRaw&r=0" class="img-estrella" />
            <img onclick="ActualizarCalificacion(1,3)" src="https://th.bing.com/th/id/R.ce494a4fe33aa36b7b3171c7a8ba7aac?rik=LqEK6sk5c9OzkQ&pid=ImgRaw&r=0" class="img-estrella" />
            <img onclick="ActualizarCalificacion(1,4)" src="https://th.bing.com/th/id/R.ce494a4fe33aa36b7b3171c7a8ba7aac?rik=LqEK6sk5c9OzkQ&pid=ImgRaw&r=0" class="img-estrella" />
            <img onclick="ActualizarCalificacion(1,5)" src="https://th.bing.com/th/id/R.ce494a4fe33aa36b7b3171c7a8ba7aac?rik=LqEK6sk5c9OzkQ&pid=ImgRaw&r=0" class="img-estrella" />
        </div>
    </div>

    <!-- Botón de favorito -->
    <div class="text-center mt-3">
        <button id="favoriteButton" class="favorite-button" data-lugar-id="1" data-usuario-dni="12345678">
            <i class="fas fa-heart"></i> <!-- Usando Font Awesome para el ícono -->
        </button>
    </div>

    <div>
    <h1> Escribí tu reseña</h1>
    <form method="post" action='@Url.Action("GuardarReseña","Home")' > <!-- formulario reseñas -->
        <input type="text" name="reseña" id="reseña" />
        <input type="hidden" name="id_lugar" value="@ViewBag.Lugar.id_lugar" />
        <input type="hidden" name="user" value="@ViewBag.User.dni" />
        <input type="submit" value="enviar reseña"/>
    </form>
        <p> @ViewBag.mensajeReseñaExitosa</p>
    </div>

    <!-- Menú -->
    <div class="menu-section text-center mt-5">
        <h3>Menú</h3>
        <div class="row justify-content-center">
            @if (ViewBag.menu != null && ViewBag.menu.Count > 0)
            {
                @foreach (ComidaxMenu plato in ViewBag.menu)
                {
                    <div class="col-md-4 d-flex justify-content-center">
                        <div class="card custom-card">
                            <div class="card-body">
                                <h5 class="card-title">@plato.nombre_plato</h5>
                                <p class="card-text">@plato.descripcion</p>
                                <p class="card-text"><strong>Precio:</strong> $@plato.precio</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-muted">No hay platos disponibles en el menú.</p>
                </div>
            }
        </div>
    </div>
</div>

