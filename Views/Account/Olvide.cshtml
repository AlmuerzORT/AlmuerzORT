<p>RECUPERE SU CONTRASEÑA</p>

@{
    if(ViewBag.RecupereContra == null){
        <p>Por favor ingrese su mail y DNI </p>

        <p>@ViewBag.mensajeError </p>
        <form method= "post" action='@Url.Action("OlvideContraseña","Account")'>
            <p>DNI:</p><br>
            <input type="text" id="dni" name="dni"> 
            <br/>
            <p>Email:</p><br>
            <input type="text" id="mail" name="mail">
            <br/>
            <input type="submit" name="Enviar">
        </form>
    }
}


@if(ViewBag.RecupereContra != null){

    <p>@ViewBag.RecupereContra</p>
    
    <form method= "post" action='@Url.Action("VerificarNuevaContraseña","Account")'>
        Contraseña:<br>
        <input type="password" id="contraseña" name="contraseña"  onKeyUp="VerificarContraseña()">
       
        <div id="Mas8">Debe contener mas de 8 caracteres</div>
        <div id="Mayusculas">Debe contener al menos 1 mayuscula</div>
        <div id="Especiales">Debe contener al menos 1 caracter especial</div>
        <input type="hidden" name="dni" value="@ViewBag.dni">
        
        <input type="submit" name="Enviar">
    </form>
}

@if(ViewBag.ContraActualizada != null){
    <p> @ViewBag.ContraActualizada </p>
    <a href='@Url.Action("IniciarSesion","Account")'> Iniciá Sesión </a>
}

@if(ViewBag.ContraNoActualizada != null){
    <p> @ViewBag.ContraNoActualizada </p>
    <a href='@Url.Action("VerificarNuevaContraseña","Account")'> Reintentar </a>
}
